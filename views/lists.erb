<% if session[:success] %>
  <div class = "flash success">
    <p><%= session.delete(:success) %></p>
  </div>
<% end %>

<ul id="lists">
  <% @lists.each do |list| %>
    <li>
      <a href="">
        <h2><%= list[:name] %></h2>
        <p><%= list[:todos].size %></li></p>
      </a>
  <% end %>
</ul>


<a href="/lists/new">New List</a>